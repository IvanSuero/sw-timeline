---
import { Image } from 'astro:assets'
const {era, events} = Astro.props
---

<div class="items-end grid sm:grid-cols-2 md:grid-cols-3 grid-cols-1 gap-x-8 sm:gap-y-8 w-full gap-y-2 pb-4">
  {
    events.map((event, index) => (
          <Image src={event.image} alt={event.title} width="500" height="500" />
    ))
  }
</div>