---
import ErasEvents from './ErasEvents.astro'
import dataEras from '../utils/eras.json'
const eras = dataEras.data
---
<div class="w-full flex flex-col items-center justify-center gap-y-24 gap-x-8">
  {
    eras.map((era, index) => (
      <div class="flex flex-row gap-24 w-full items-center justify-center">
        <div class="group flex sm:flex-row flex-col items-center gap-12 sm:gap-24 justify-center sm:w-3/4 w-full sm:text-center shadow-[0px_0px_30px] shadow-[#f7fafc] rounded-2xl p-4 hover:cursor-pointer hover:scale-105 transition-all duration-300 ease-in-out">
          <div class="flex flex-col items-center justify-center gap-4 rounded-xl py-4 hover:cursor-pointer sm:w-1/4">
            <img src={era.image} alt={era.label} class="sm:w-32 w-48 sm:h-32 h-48 object-cover rounded-full" />
            <h3 class="text-3xl font-bold text-white">{era.label}</h3>
          </div>
          <div class={`text-white text-center ${era.events.length === 0 ? 'hidden' : 'w-3/4'}`}>
            {
              <ErasEvents era={era.label} events={era.events} />
            }
          </div>
        </div>
      </div>
    ))
  }
</div>